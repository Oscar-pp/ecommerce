<header class="header">
    <div class="header-logo">
        <a href="/" class="inline-logo" aria-label="Inicio">
            <!-- Logo SVG acorde a ecommerce (puedes cambiar color fácilmente con CSS) -->
            <svg class="logo" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" role="img" aria-hidden="true">
                <rect width="64" height="64" rx="10" fill="#ffffff" opacity="0.06"/>
                <path d="M16 20l4-8h24l4 8H16z" fill="#fff" opacity="0.9"/>
                <path d="M18 28h28v18a6 6 0 0 1-6 6H24a6 6 0 0 1-6-6V28z" fill="#fff" opacity="0.95"/>
                <circle cx="26" cy="46" r="2.5" fill="#00a884"/>
                <circle cx="38" cy="46" r="2.5" fill="#00a884"/>
            </svg>
        </a>
    </div>

    <div class="container-navbar">
        <ul class="navbar" role="navigation" aria-label="Menú principal">
            <li><a href="">Cultura</a></li>
            <li><a href="">Ropa</a></li>
            <li><a href="">Hogar</a></li>
            <li><a href="">Tecnología</a></li>
            <li><a href="">Deporte</a></li>
        </ul>
    </div>

    <div class="header-actions">
        <div class="cart" id="cart">
            <button class="cart-button" id="cartButton" aria-haspopup="true" aria-expanded="false" aria-label="Abrir carrito">
                <!-- simple cart icon -->
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 6h15l-1.5 9h-12L6 6z" stroke="currentColor" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                    <circle cx="9" cy="20" r="1" fill="currentColor"/>
                    <circle cx="18" cy="20" r="1" fill="currentColor"/>
                </svg>
                <span class="cart-badge" id="cartCount">2</span>
            </button>

            <div class="cart-dropdown" id="cartDropdown" role="menu" aria-label="Contenido del carrito">
                <ul>
                    <li class="cart-item">
                        <img src="https://picsum.photos/seed/p1/48/48" alt="Producto 1">
                        <div class="cart-item-info">
                            <div class="name">Camiseta deportiva</div>
                            <div class="price">€19.99</div>
                        </div>
                        <div class="qty">x1</div>
                    </li>
                    <li class="cart-item">
                        <img src="https://picsum.photos/seed/p2/48/48" alt="Producto 2">
                        <div class="cart-item-info">
                            <div class="name">Auriculares</div>
                            <div class="price">€49.99</div>
                        </div>
                        <div class="qty">x1</div>
                    </li>
                </ul>
                <div class="cart-actions">
                    <a href="/cart" class="btn btn-primary">Ver carrito</a>
                    <a href="/checkout" class="btn">Pagar</a>
                </div>
            </div>
        </div>
    </div>
</header>